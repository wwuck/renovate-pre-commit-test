
# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[Makefile]
indent_style = tab

[*.proto]
indent_style = space
indent_size = 2

[*.json]
indent_size = 4

[*.toml]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.{diff,patch}]
trim_trailing_whitespace = false

[{Dockerfile,Dockerfile.*}]
indent_style = space
indent_size = 2
